<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    tools:context=".MainActivity">

    <!-- Display Fragment Container -->
    <FrameLayout
        android:id="@+id/display_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
       android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
      app:layout_constraintHeight_percent="0.14"
        android:background="@drawable/calcultor_body_background"
        android:layout_alignParentTop="true"
        app:layout_constraintBottom_toTopOf="@+id/button_fragment_container"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!-- Buttons Fragment Container -->
    <FrameLayout
        android:id="@+id/button_fragment_container"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginEnd="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginBottom="10dp"
        android:background="@drawable/calcultor_body_bacground_two"
        android:layout_below="@id/display_fragment_container"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/display_fragment_container" />

</androidx.constraintlayout.widget.ConstraintLayout>